@model dynamic

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPharma.cshtml";
    List<WAD.Models.Category> categories = ViewBag.Categories;
    List<WAD.Models.Product> products = ViewBag.Products;
 }

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            CategoryName
        </th>
        <th>
            CategoryIcon
        </th>
        <th></th>
    </tr>

@foreach (WAD.Models.Category item in Model.Categories) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            <img width="50" src="~/@item.CategoryIcon"/>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
